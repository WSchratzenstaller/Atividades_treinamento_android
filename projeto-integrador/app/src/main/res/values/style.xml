<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="font">@font/lato_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="TextDefault" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="font">@font/lato_regular</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="background">@drawable/ic_heart_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

</resources>